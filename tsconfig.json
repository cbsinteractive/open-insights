{
    "compilerOptions": {
        "target": "es6",
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": ["DOM", "ES2015", "ES2020"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true
    },
    "exclude": ["dist", "**/*.test.ts"]
}
