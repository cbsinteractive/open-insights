{
    "compilerOptions": {
        "target": "es6",
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": ["DOM", "ES2015", "ES2020"],
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "dist",
        "**/*.test.ts",
        "src/testUtil"
    ]
}
